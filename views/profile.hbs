<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8 border border-gray-100">
    <!-- Profile info -->
    <div class="px-8 py-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center">
          <div class="relative">
            <div class="h-24 w-24 rounded-full bg-white shadow-md overflow-hidden border border-gray-200">
              <img src="{{user.displayPhoto}}" alt="{{user.username}}" class="h-full w-full object-cover">
            </div>
          </div>
          <div class="ml-5">
            <h1 class="text-2xl font-bold text-gray-900">
              {{#if user.fullName}}
                {{user.fullName}}
              {{else}}
                {{user.username}}
              {{/if}}
            </h1>
            <p class="text-sm text-gray-500">@{{user.username}}</p>
          </div>
        </div>
        
        {{#if profileOwner}}
          <div>
            <a href="/profile/edit" class="inline-flex items-center rounded-lg bg-primary px-3 py-2 text-sm font-medium text-white shadow-sm hover:bg-secondary transition-all focus:outline-none">
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
              Editar perfil
            </a>
          </div>
        {{/if}}
      </div>
      
      {{#if user.bio}}
        <div class="mb-4">
          <p class="text-gray-700 leading-relaxed">{{user.bio}}</p>
        </div>
      {{/if}}
      
      <div class="flex items-center text-sm text-gray-500">
        <svg class="h-4 w-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>Se unió {{user.createdAt}}</span>
      </div>
    </div>
  </div>
  
  <!-- User posts -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Publicaciones</h2>
    
    {{#if posts.length}}
      <div class="space-y-6">
        {{#each posts}}
          <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition-all border border-gray-100">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="h-10 w-10 rounded-full overflow-hidden border border-gray-200">
                    <img src="{{../user.displayPhoto}}" alt="{{../user.username}}" class="h-full w-full object-cover">
                  </div>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">{{../user.username}}</p>
                  <p class="text-xs text-gray-500">{{this.createdAt}}</p>
                </div>
              </div>
              
              {{#if ../profileOwner}}
                <div class="flex space-x-3">
                  <a href="/posts/{{this._id}}/edit" class="text-gray-400 hover:text-primary transition-all p-1">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </a>
                  <form action="/posts/{{this._id}}/delete" method="POST" class="inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta publicación?');">
                    <button type="submit" class="text-gray-400 hover:text-danger transition-all p-1">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </form>
                </div>
              {{/if}}
            </div>
            <p class="text-gray-700 mb-4 text-sm leading-relaxed">{{this.content}}</p>
            <a href="/posts/{{this._id}}" class="text-sm font-medium text-primary hover:text-secondary transition-all inline-flex items-center">
              Ver detalles y comentarios 
              <svg class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="bg-yellow-50 border border-yellow-200 p-6 rounded-lg text-center">
        <svg class="h-12 w-12 mx-auto text-yellow-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-yellow-700 font-medium">No hay publicaciones aún.</p>
      </div>
    {{/if}}
  </div>
</div> 